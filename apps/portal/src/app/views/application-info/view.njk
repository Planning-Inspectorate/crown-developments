{% extends "views/layouts/main.njk" %}

{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/details/macro.njk" import govukDetails %}

{% block pageHeading %}{% endblock %}

{% block pageContent %}
    <div class="govuk-width-container">
        <main class="govuk-main-wrapper" id="main-content">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-one-third">
                    <ul class="govuk-list">
                      <li>
                        <strong>Application Information</strong>
                      </li>
                      <li>
                        <a class="govuk-link" href="#">Documents</a>
                      </li>
                      <li>
                        <a class="govuk-link" href="#">Have your say</a>
                      </li>
                    </ul>
                </div>

                <div class="govuk-grid-column-two-thirds">
                    <div class="govuk-grid-row">
                        <div class="govuk-grid-column-full">
                            <h1 class="govuk-heading-xl">
                                {% if pageCaption %}
                                    <span class="govuk-caption-xl">{{ pageCaption }}</span>
                                {% endif %}
                                {{ pageHeading or pageTitle }}
                            </h1>
                        </div>
                    </div>

                    <div>
                        <h2 class="govuk-heading-m">About the application</h2>
                        <p class="govuk-body">Type of application: {{ applicationType.displayName }}</p>
                        <p class="govuk-body">Applicant name: {{ answers.applicantContactName }}</p>
                        <p class="govuk-body">Local Planning Authority: {{ lpaName }}</p>
                        <p class="govuk-body">Date application accepted: {{ applicationAcceptedDate }}</p>
                        <p class="govuk-body">Date by which representations must be made: {{ representationsPeriodEndDate }}</p>
                        <p class="govuk-body">Application decision date: {{ decisionDate }}</p>
                        <p class="govuk-body">The address for receipt of representations about the application: To be determined</p>
                        <p class="govuk-body">{{ answers.description }}</p>
                    </div>

                    <hr class="govuk-section-break govuk-section-break--xl govuk-section-break--visible">

                    <div>
                        <h2 class="govuk-heading-m">Project stage</h2>

                        <p class="govuk-body">
                            {% if answers.stageId %}
                                This application is at {{ stageId }} stage
                            {% else %}
                                This application has not yet been moved into a valid project stage
                            {% endif %}
                        </p>

                        <p class="govuk-body">
                            {% if answers.applicationAcceptedDate %}
                                This application was accepted on <strong>{{ applicationAcceptedDate }}</strong>
                            {% else %}
                                This application has not yet been accepted
                            {% endif %}
                        </p>

                        {{ govukDetails({
                          summaryText: "Acceptance",
                          text: "Text about acceptance project stage"
                        }) }}
                        {{ govukDetails({
                          summaryText: "Consultation",
                          text: "Text about consultation project stage"
                        }) }}
                        {{ govukDetails({
                          summaryText: "Procedure decision",
                          text: "Text about procedure decision project stage"
                        }) }}
                        {{ govukDetails({
                          summaryText: "Written Representations",
                          text: "Text about written representations project stage"
                        }) }}
                        {{ govukDetails({
                          summaryText: "Inquiry",
                          text: "Text about inquiry project stage"
                        }) }}
                        {{ govukDetails({
                          summaryText: "Hearing",
                          text: "Text about hearing (dependant upon the outcome of the decision) project stage"
                        }) }}
                        {{ govukDetails({
                          summaryText: "Decision",
                          text: "Text about decision project stage"
                        }) }}
                    </div>

                    <hr class="govuk-section-break govuk-section-break--xl govuk-section-break--visible">

                    <div>
                        <h2 id="site-address" class="govuk-heading-m">Project location</h2>
                        <p class="govuk-body">{{ formattedAddress }}</p>
                        <p class="govuk-body">Site Northing: {{ answers.siteNorthing }}</p>
                        <p class="govuk-body">Site Easting: {{ answers.siteEasting }}</p>
                    </div>

                    <hr class="govuk-section-break govuk-section-break--xl govuk-section-break--visible">

                    <div>
                        <h2 id="procedure" class="govuk-heading-m">Procedure</h2>
                        <p class="govuk-body">{% if answers.procedureId %}{{ procedureId }}{% else %}Procedure has yet to be determined{% endif %}</p>
                        {% if answers.procedureId === 'inquiry' %}
                          <p class="govuk-body">Inquiry statements date</p>
                          <p class="govuk-body">Inquiry date</p>
                          <p class="govuk-body">Inquiry venue</p>
                          <p class="govuk-body">Proofs of evidence</p>
                        {% elif answers.procedureId === 'hearing' %}
                          <p class="govuk-body">Hearing Date: </p>
                          <p class="govuk-body">Hearing venue: </p>
                        {% endif %}

                        <p class="govuk-body">Inspector: {{ answers.inspectorId if answers.inspectorId else "To be determined" }}</p>
                        <p class="govuk-body">Case Officer: {{ answers.caseOfficerId if answers.caseOfficerId else "To be determined" }}</p>
                    </div>
                </div>
            </div>
        </main>
    </div>
{% endblock %}
