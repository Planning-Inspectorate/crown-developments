{% extends "views/layouts/main.njk" %}

{% from "govuk/components/table/macro.njk" import govukTable %}
{% import "pagination/pagination.njk" as pagination %}
{% import "pagination/pagination-options.njk" as paginationOptions %}

{% block pageHeading %}{% endblock %}

{% block beforeContent %}
    <div class="govuk-width-container">
        {% include "views/layouts/components/core/intro-to-service.njk" %}
    </div>
    {{ super() }}
{% endblock %}

{% macro insertWbr(inputString) %}
    {{ inputString | replace("/", "/<wbr>") | safe }}
{% endmacro %}


{% block pageContent %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <h2 class="govuk-heading-l">
                {{ pageTitle }}
            </h2>
            <div id="pagination" class="govuk-body">
                <p class="govuk-body govuk-clearfix">
                    <p class="govuk-body">
                        Showing <strong>{{ resultsStartNumber }}</strong> to <strong>{{ resultsEndNumber if totalCrownDevelopments > resultsEndNumber else totalCrownDevelopments }}</strong>
                        of <strong>{{ totalCrownDevelopments }}</strong> results
                    </p>
                    {{ paginationOptions.renderPagination(selectedItemsPerPage, totalCrownDevelopments, pageNumber, searchValue) }}
                </p>
                <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">

                {{ crownDevelopmentsTable(crownDevelopmentsViewModels) }}
            </div>

            {# if pageNumber and totalPages values are both 1 then pagination options not shown #}
            {{ pagination.renderPagination(pageNumber, totalPages, currentUrl) }}
        </div>
    </div>
{% endblock %}

{% macro crownDevelopmentsTable(crownDevelopments) %}
    {% set crownDevelopmentRows = [] %}
    {% for crownDevelopment in crownDevelopmentsViewModels %}
        {% set crownDevelopmentRows = (crownDevelopmentRows.push([
            {
                html: "<a class='govuk-link' href='/applications/" +  crownDevelopment.id + "/application-information'>" + insertWbr(crownDevelopment.reference) + "</a>"
            },
            {
                text: crownDevelopment.applicationType,
                classes: "pins-table-columns__hide-on-mobile"
            },
            {
                text: crownDevelopment.applicantName
            },
            {
                text: crownDevelopment.lpaName
            },
            {
                text: crownDevelopment.stage,
                classes: "pins-table-columns__hide-on-mobile"
            }
        ]), crownDevelopmentRows) %}
    {% endfor %}

    {{ govukTable({
        captionClasses: "govuk-table__caption--m",
        firstCellIsHeader: true,
        head: [
            {
                text: "Application reference"
            },
            {
                text: "Application type",
                classes: "pins-table-columns__hide-on-mobile"
            },
            {
                text: "Applicant name"
            },
            {
                text: "Local planning authority"
            },
            {
                text: "Stage",
                classes: "pins-table-columns__hide-on-mobile"
            }
        ],
        rows: crownDevelopmentRows
    }) }}
{% endmacro %}