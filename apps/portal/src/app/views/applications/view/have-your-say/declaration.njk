{% extends "views/layouts/main.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}

{% set title = "Declaration – Have your say on a Crown Development Application" %}
{% block pageTitle %}{{ "Error: " + title if errors else title }}{% endblock %}

{% block pageContent %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <p class="govuk-body">By submitting this form you are commenting on the application.</p>
            <p class="govuk-body">Your comments will be taken into account before the application is determined.</p>
            <p class="govuk-body">You are agreeing that we will use your details to contact you about the
                application.</p>
            <p class="govuk-body">You are also agreeing that all comments you submit, along with your name, and any
                represented party’s names will be published on this website. No contact details will be made public.</p>
            <br>
        </div>
        <div class="govuk-grid-column-two-thirds">
            <form method="post" novalidate="novalidate">
                {{ govukButton({
                    text: "Submit",
                    classes: "govuk-button--start",
                    preventDoubleClick: true
                }) }}
            </form>
        </div>
    </div>
{% endblock %}