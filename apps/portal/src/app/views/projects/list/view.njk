{% extends "views/layouts/main.njk" %}

{%- from "govuk/components/table/macro.njk" import govukTable -%}

{% block pageContent %}
	{% set rows = [] %}

	{% for project in projects %}
	{% set rows = (rows.push([
		{
			html: "<a class='govuk-link' href='projects/" + project.id + "/'>" + project.name + "</a>"
		},
		{
			text: project.applicant
		},
		{
			text: project.status
		}
	]), rows) %}
	{% endfor %}

	{{
		govukTable({
			head: [
				{
					text: "Project name"
				},
				{
					text: "Applicant"
				},
				{
					text: "Status"
				}
			],
			rows: rows
		})
	}}
{% endblock %}