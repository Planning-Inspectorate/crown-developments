{% extends layoutTemplate %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% set title = "Review representation - " + journeyTitle + " - GOV.UK" %}
{% block pageTitle %}
    {{ title }}
{% endblock %}

{% block content %}

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <h1 class="govuk-heading-l">
                <span class="govuk-caption-xl">{{ reference }}</span>
                Review attachment
            </h1>
        </div>
    </div>

    {# TODO: wrap in form - currently a placeholder page #}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            {{ govukSummaryList({
                rows: [
                    {
                        key: {
                            text: "Reference"
                        },
                        value: {
                            text: reference
                        }
                    },
                    {
                        key: {
                            text: "Original attachment"
                        },
                        value: {
                            html: '<a href="#" class="govuk-link govuk-link--no-visited-state">' + fileName + '</a>'
                        }
                    }
                ]
            }) }}

            {{  govukRadios({
                name: 'reviewDocumentDecision',
                value: documentStatus,
                fieldset: {
                    legend: {
                        text: 'Review decision',
                        isPageHeading: false,
                        classes: 'govuk-fieldset__legend--m'
                    }
                },
                items: [
                    {
                        value: accept,
                        text: "Accept"
                    },
                    {
                        value: acceptAndRedact,
                        text: "Accept and redact"
                    },
                    {
                        value: reject,
                        text: "Reject"
                    }
                ],
                errorMessage: errors.reviewDocumentDecision and {
                    text: errors.reviewDocumentDecision.msg
                }
            }) }}
        </div>
    </div>
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            {{  govukButton({ text: 'Continue' }) }}
        </div>
    </div>
{% endblock %}
