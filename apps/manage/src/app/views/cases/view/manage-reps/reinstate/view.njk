{% extends "views/layouts/main.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}

{% block pageTitle %}
    Case list - All Cases - Manage a Crown Development Application
{% endblock %}
{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
            <h1 class="govuk-heading-l">
                {{ pageTitle }}
            </h1>
            <div class="govuk-hint">Representation reference: {{ representationRef }}</div>
        </div>
    </div>
    {% block pageContent %}
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                {{ govukWarningText({
                    html: "Reinstating this representation will restore it and any associated attachments to their original state.<br><br>If the representation was previously accepted, it will reappear on the Crow Development Application Website." | safe
                }) }}
            </div>
        </div>

        <form method="POST">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-full">
                    {{ govukButton({
                        text: "Reinstate representation"
                    }) }}
                </div>
            </div>
        </form>
    {% endblock %}
{% endblock %}