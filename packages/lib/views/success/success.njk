{% from "govuk/components/panel/macro.njk" import govukPanel %}

{% macro success(title, bodyText, successBackLinkUrl, successBackLinkText) %}
    {{ govukPanel({
        titleText: title,
        html: bodyText
    }) }}

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <p class="govuk-body">
                <a href="{{ successBackLinkUrl }}" class="govuk-link">{{ successBackLinkText }}</a>
            </p>
        </div>
    </div>
{% endmacro %}
