{
  "name": "crown-developments",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "main": "index.js",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "commitlint": "commitlint --from=$(git cherry origin/main | head -n 1 | cut -c 3-)",
    "db-migrate-dev": "npm run migrate-dev --workspace @pins/crowndev-database",
    "db-migrate-prod": "npm run migrate-prod --workspace @pins/crowndev-database",
    "db-generate": "npm run generate --workspace @pins/crowndev-database",
    "db-seed": "npm run seed --workspace @pins/crowndev-database",
    "db-seed-prod": "npm run seed:prod --workspace @pins/crowndev-database",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "lint": "npx eslint .",
    "prepare": "node .husky/install.mjs",
    "test": "node --test",
    "test-coverage": "node --test --experimental-test-coverage"
  },
  "dependencies": {
    "@azure/identity": "^4.9.1",
    "@azure/msal-node": "^3.5.1",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@prisma/client": "^6.7.0",
    "accessible-autocomplete": "^3.0.1",
    "body-parser": "^2.2.0",
    "connect-redis": "^8.0.3",
    "cookie": "^1.0.2",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.5.0",
    "escape-html": "^1.0.3",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.1",
    "govuk-frontend": "^5.9.0",
    "helmet": "^8.1.0",
    "notifications-node-client": "^8.2.1",
    "nunjucks": "^3.2.4",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "redis": "^4.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@faker-js/faker": "^9.7.0",
    "@microsoft/microsoft-graph-types": "^2.40.0",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "prettier-plugin-prisma": "^5.0.0",
    "prisma": "^6.6.0",
    "sass": "^1.87.0",
    "supertest": "^7.1.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.{js,ts,json,md,prisma,yml,yaml,scss}": [
      "prettier --write"
    ]
  }
}
