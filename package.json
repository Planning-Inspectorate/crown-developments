{
  "name": "crown-developments",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "main": "index.js",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "commitlint": "commitlint --from=$(git cherry origin/main | head -n 1 | cut -c 3-)",
    "db-migrate-dev": "npm run migrate-dev --workspace @pins/crowndev-database",
    "db-migrate-prod": "npm run migrate-prod --workspace @pins/crowndev-database",
    "db-generate": "npm run generate --workspace @pins/crowndev-database",
    "db-seed": "npm run seed --workspace @pins/crowndev-database",
    "db-seed-prod": "npm run seed:prod --workspace @pins/crowndev-database",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "lint": "npx eslint .",
    "prepare": "node .husky/install.mjs",
    "test": "node --test",
    "test-coverage": "node --test --experimental-test-coverage"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "body-parser": "^1.20.3",
    "connect-redis": "^7.1.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.0",
    "govuk-frontend": "^5.7.1",
    "helmet": "^8.0.0",
    "nunjucks": "^3.2.4",
    "pino": "^9.5.0",
    "pino-pretty": "^11.3.0",
    "redis": "^4.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.0.1",
    "prettier": "^3.4.0",
    "prettier-plugin-prisma": "^5.0.0",
    "prisma": "^5.22.0",
    "sass": "^1.64.1"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.{js,ts,json,md,prisma,yml,yaml}": [
      "prettier --write"
    ]
  }
}
